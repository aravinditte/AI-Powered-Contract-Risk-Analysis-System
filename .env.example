# ===============================
# Application
# ===============================
ENVIRONMENT=development
APP_NAME=AI Contract Risk Analysis System
ENABLE_DOCS=true

# ===============================
# Security
# ===============================
SECRET_KEY=change_this_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===============================
# Database
# ===============================
DATABASE_URL=postgresql://contracts_user:contracts_pass@postgres:5432/contracts

# ===============================
# CORS
# ===============================
CORS_ALLOW_ORIGINS=http://localhost:3000

# ===============================
# File Storage
# ===============================
FILE_STORAGE_PATH=/var/lib/contracts
MAX_UPLOAD_SIZE_MB=20

# ===============================
# AI Governance (NON-NEGOTIABLE)
# ===============================
AI_DECISION_MODE=HUMAN_REVIEW_ONLY
ALLOW_AUTO_APPROVAL=false
